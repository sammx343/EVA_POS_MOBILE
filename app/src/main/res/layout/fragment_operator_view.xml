<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.smayor.myapplication.OperatorViewFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_weight="7"
        android:weightSum="11"
        android:background="@color/colorPrimary"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="INGRESAR ARTÍCULO"
            android:layout_weight="1"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/articleCode"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/border"
            android:gravity="bottom"
            android:padding="2dp"
            android:text="123455664"
            android:textStyle="bold"
            android:textColor="@color/colorText"
            android:textSize="27sp"
            android:layout_weight="2"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="ARTÍCULO"
            android:textStyle="bold"
            android:layout_weight="1"
            android:textSize="18sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:gravity="bottom|right"
            android:text="$2900"
            android:textSize="27sp"
            android:layout_weight="2"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="No se permiten valores por código ingresado"
            android:textSize="18sp"
            android:layout_weight="3"
            android:textColor="@color/specialColorText" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="2">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/categorias_ico_next"
                    android:background="@drawable/shape"/>
            </LinearLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:text="TOTAL: $2900"
                android:textStyle="bold"
                android:textSize="24sp"
                android:gravity="right|bottom"/>
        </LinearLayout>

    </LinearLayout>

</FrameLayout>
