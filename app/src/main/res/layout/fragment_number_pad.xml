<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.smayor.myapplication.NumberPadFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="2dp"
                android:layout_weight="0.5"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:onClick="onButtonClicked"
                android:text="1"
                android:textSize="30sp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="2dp"
                android:layout_weight="0.5"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:onClick="onButtonClicked"
                android:text="2"
                android:textSize="30sp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="2dp"
                android:layout_weight="0.5"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:onClick="onButtonClicked"
                android:text="3"
                android:textSize="30sp" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="2dp"
                android:layout_weight="0.5"
                android:background="@color/cancelButton"
                android:gravity="center"
                android:scaleType="fitCenter"
                android:src="@drawable/btn_esc" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="2dp"
                android:layout_weight="0.5"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:onClick="onButtonClicked"
                android:text="4"
                android:textSize="30sp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="2dp"
                android:layout_weight="0.5"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:onClick="onButtonClicked"
                android:text="5"
                android:textSize="30sp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="2dp"
                android:layout_weight="0.5"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:onClick="onButtonClicked"
                android:text="6"
                android:textSize="30sp" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="2dp"
                android:layout_weight="0.5"
                android:background="@color/specialColorText"
                android:onClick="deleteCharacter"
                android:scaleType="fitCenter"
                android:src="@drawable/btn_bcsp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="2dp"
                android:layout_weight="0.5"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:onClick="onButtonClicked"
                android:text="7"
                android:textSize="30sp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="2dp"
                android:layout_weight="0.5"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:onClick="onButtonClicked"
                android:text="8"
                android:textSize="30sp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="2dp"
                android:layout_weight="0.5"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:onClick="onButtonClicked"
                android:text="9"
                android:textSize="30sp" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:layout_marginStart="2dp"
                android:background="@color/optionButton"
                android:scaleType="fitCenter"
                android:src="@drawable/btn_multi" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="2dp"
                android:layout_weight="0.5"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:onClick="onButtonClicked"
                android:text="0"
                android:textSize="30sp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="2dp"
                android:layout_weight="0.5"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:onClick="onButtonClicked"
                android:text="00"
                android:textSize="30sp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="2dp"
                android:layout_weight="0.5"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:onClick="onButtonClicked"
                android:text="."
                android:textSize="30sp" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="2dp"
                android:layout_weight="0.5"
                android:background="@color/optionButton"
                android:scaleType="fitCenter"
                android:src="@drawable/btn_enter" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
